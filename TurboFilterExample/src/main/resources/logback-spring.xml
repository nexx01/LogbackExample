<configuration>
    <turboFilter class="com.example.turbofilterexample.filter.SampleTurboFilter">
        <Marker>sample</Marker>
    </turboFilter>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %-4relative [%thread] %-5level %logger -%kvp -%msg%n
            </pattern>
        </encoder>
    </appender>

    <root>
        <appender-ref ref="STDOUT" />
    </root>
</configuration>