<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">

        <filter class="com.example.logbackexample.logbackFilter.SimpleFilter" />

        <encoder>
            <pattern>
                %-4relative [%thread] %-5level %logger -%kvp -%msg%n
            </pattern>
        </encoder>
    </appender>

    <root>
        <appender-ref ref="STDOUT" />
    </root>
</configuration>